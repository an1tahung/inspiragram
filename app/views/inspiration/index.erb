<div id="backimage" style="background:url(<%=@image.url%>); background-size: cover; background-position: center center;">

<section>
  <!-- <div></div>  -->
  <div class="container centered">
    <div class="twelve columns">

      <% if @image.bright %>
        <h1 class="quotedark" contenteditable><%= @quote.content %></h1>
        <h3 class="quotedark" contenteditable>&mdash;<%= @quote.author %></h3>
        <h2 id="logo"><a class="button" id="darkbutton" href="/inspiration">Inspire Me</a></h2>
      <% else %>
        <h1 class="quote" contenteditable><%= @quote.content %></h1>
        <h3 class="quote" contenteditable>&mdash;<%= @quote.author %></h3>
        <h2 id="logo"><a class="button" href="/inspiration">Inspire Me</a></h2>
      <% end %>
    </div>
  </div>
</section>

</div>

